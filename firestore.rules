rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Helper function to check if user is authenticated
    function isAuthenticated() {
      return request.auth != null;
    }
    
    // Helper function to check if user is the owner
    function isOwner(userId) {
      return isAuthenticated() && request.auth.uid == userId;
    }
    
    // Helper function to get user role
    function getUserRole() {
      return get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role;
    }
    
    // Users collection
    match /users/{userId} {
      // Users can read their own data
      allow read: if isOwner(userId);
      // Users can create their own data
      allow create: if isAuthenticated() && isOwner(userId);
      // Users can update their own data
      allow update: if isAuthenticated() && isOwner(userId);
      // Only admins can delete users
      allow delete: if isAuthenticated() && getUserRole() == "admin";
    }
    
    // Students collection
    match /students/{studentId} {
      // Students can read their own data
      allow read: if isOwner(studentId);
      // Students can create their own data
      allow create: if isAuthenticated() && isOwner(studentId);
      // Students can update their own data
      allow update: if isAuthenticated() && isOwner(studentId);
      // Coaches can read student data (for coaching purposes)
      allow read: if isAuthenticated() && getUserRole() == "coach";
    }
    
    // Coaches collection
    match /coaches/{coachId} {
      // Public read access for active coaches
      allow read: if resource.data.status == "active";
      // Coaches can read their own data
      allow read: if isOwner(coachId);
      // Coaches can create their own data
      allow create: if isAuthenticated() && isOwner(coachId);
      // Coaches can update their own data (including customOfferings)
      allow update: if isAuthenticated() && isOwner(coachId);
    }
    
    // Courses collection
    match /courses/{courseId} {
      // Public read access for published courses
      allow read: if resource.data.isPublished == true;
      // Course owner can read their own courses
      allow read: if isAuthenticated() && resource.data.coachId == request.auth.uid;
      // Coaches can create courses
      allow create: if isAuthenticated() && getUserRole() == "coach";
      // Course owner can update their own courses
      allow update: if isAuthenticated() && resource.data.coachId == request.auth.uid;
    }
    
    // Course lessons subcollection
    match /courses/{courseId}/lessons/{lessonId} {
      // Same rules as parent course
      allow read: if get(/databases/$(database)/documents/courses/$(courseId)).data.isPublished == true;
      allow read: if isAuthenticated() && get(/databases/$(database)/documents/courses/$(courseId)).data.coachId == request.auth.uid;
      allow create: if isAuthenticated() && get(/databases/$(database)/documents/courses/$(courseId)).data.coachId == request.auth.uid;
      allow update: if isAuthenticated() && get(/databases/$(database)/documents/courses/$(courseId)).data.coachId == request.auth.uid;
    }
    
    // Videos collection
    match /videos/{videoId} {
      // Public read access for public videos
      allow read: if resource.data.visibility == "public";
      // Video owner can read their own videos
      allow read: if isAuthenticated() && resource.data.coachId == request.auth.uid;
      // Coaches can create videos
      allow create: if isAuthenticated() && getUserRole() == "coach";
      // Video owner can update their own videos
      allow update: if isAuthenticated() && resource.data.coachId == request.auth.uid;
    }
    
    // Articles collection
    match /articles/{articleId} {
      // Public read access for published articles
      allow read: if resource.data.status == "published";
      // Article author can read their own articles
      allow read: if isAuthenticated() && resource.data.authorCoachId == request.auth.uid;
      // Coaches can create articles
      allow create: if isAuthenticated() && getUserRole() == "coach";
      // Article author can update their own articles
      allow update: if isAuthenticated() && resource.data.authorCoachId == request.auth.uid;
    }
    
    // Bookings collection
    match /bookings/{bookingId} {
      // Students can read their own bookings
      allow read: if isAuthenticated() && resource.data.studentId == request.auth.uid;
      // Coaches can read bookings for their sessions
      allow read: if isAuthenticated() && resource.data.coachId == request.auth.uid;
      // Students can create bookings
      allow create: if isAuthenticated() && getUserRole() == "student";
      // Both student and coach can update bookings
      allow update: if isAuthenticated() && 
        (resource.data.studentId == request.auth.uid || resource.data.coachId == request.auth.uid);
    }
    
    // Purchases collection
    match /purchases/{purchaseId} {
      // Users can read their own purchases
      allow read: if isAuthenticated() && resource.data.userId == request.auth.uid;
      // System can create purchases (via webhook)
      allow create: if isAuthenticated();
    }
    
    // Enrollments collection
    match /enrollments/{enrollmentId} {
      // Users can read their own enrollments
      allow read: if isAuthenticated() && resource.data.userId == request.auth.uid;
      // System can create enrollments
      allow create: if isAuthenticated();
      // Users can update their own enrollments
      allow update: if isAuthenticated() && resource.data.userId == request.auth.uid;
    }
    
    // Coach student notes collection
    match /coachStudentNotes/{noteId} {
      // Coaches can read their own notes
      allow read: if isAuthenticated() && resource.data.coachId == request.auth.uid;
      // Coaches can create notes
      allow create: if isAuthenticated() && getUserRole() == "coach";
      // Coaches can update their own notes
      allow update: if isAuthenticated() && resource.data.coachId == request.auth.uid;
    }
    
    // Reviews collection
    match /reviews/{reviewId} {
      // Public read access
      allow read: if true;
      // Students can create reviews
      allow create: if isAuthenticated() && getUserRole() == "student";
      // Review author can update their own reviews
      allow update: if isAuthenticated() && resource.data.studentId == request.auth.uid;
    }
  }
}

